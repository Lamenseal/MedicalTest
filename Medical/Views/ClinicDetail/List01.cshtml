@model IEnumerable<Medical.ViewModel.CClinicDetailViewModel>

    @{
        ViewData["Title"] = "List";
    }

    <!-- Hero Start 上方標題導覽區 -->
    <div class="container-fluid bg-primary py-5 hero-header mb-5">
        <div class="row py-3">
            <div class="col-12 text-center">
                <h1 class="display-3 text-white animated zoomIn">預約門診</h1>
                <a href="" class="h4 text-white">首頁</a>
                <i class="far fa-circle text-white px-2"></i>
                <a href="" class="h4 text-white">預約</a>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <div class="container-fluid bg-primary bg-appointment mb-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 90px;">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="display-5 text-white mb-4">我們是您值得信賴且屢獲殊榮的眼科診所</h1>
                        <p class="text-white mb-0">
                            此預約表單僅適用於《近視雷射、老花雷射、白內障手術》等項目之術前檢查預約!
                            若有其他眼科門診需求，請現場掛號或電話詢問離您最近的門診單位，謝謝!
                            網路預約恕不接受當日預約，請於1天前預約，以便安排！
                            視門診流量安排，並不確定現場序號！
                            因檢查時間較長，請於門診時間結束前1小時到達，術前檢查請勿自行開車或騎車前往！
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">查詢門診</h1>
                        <form method="get">
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <select class="form-select bg-light border-0" style="height: 55px;">
                                        <option selected>選擇科別</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="1">@item.Department.DeptName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <select class="form-select bg-light border-0" style="height: 55px;">
                                        <option selected>選擇醫生</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="1">@item.Doctor.DoctorName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control bg-light border-0" placeholder="你的名字" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="email" class="form-control bg-light border-0" placeholder="電子信箱" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        <input type="text"
                                               class="form-control bg-light border-0 datetimepicker-input"
                                               placeholder="選擇日期" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="time" id="time1" data-target-input="nearest">
                                        <input type="text"
                                               class="form-control bg-light border-0 datetimepicker-input"
                                               placeholder="選擇時間" data-target="#time1" data-toggle="datetimepicker" style="height: 55px;">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-dark w-100 py-3" type="submit">查詢門診</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
